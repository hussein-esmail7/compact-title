\newcommand\titlenew{
	\makeatletter
	\renewcommand{\maketitle}{\bgroup\setlength{\parindent}{0pt}
		\vspace{0.5in}
		\begin{flushleft}
			{\Large{}\textbf{\@title}}\par
			% {\large{}\textit{``For Show''} Musical Workshop}\par
			\@author{} \\
			\@date{} \\
			\vspace{0.1in}
			\hline
		\end{flushleft}\egroup
	}
	\makeatother

	% ------------ Page numbers -----------------
	\pagestyle{fancy}
	\renewcommand{\headrulewidth}{0pt} % No lines when using fancyhdr
	\fancyhead[]{ }
	\fancyfoot{ }
	% If this at header, it adds more spacing above and along the entire title
	\fancyfoot[RO]{\thepage{} of \textcolor{black}{\pageref*{LastPage}}}
	\fancyfoot[LE]{\thepage{} of \textcolor{black}{\pageref*{LastPage}}}
}

